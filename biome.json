{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",

  "files": {
    "ignore": ["office-addin/*"]
  },

  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "include": [
      "src/**/*.json",
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.tsc",
      "src/*.json",
      "src/*.js",
      "src/*.ts",
      "src/*.tsc"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "include": [
      "src/**/*.json",
      "src/**/*.ts",
      "src/**/*.tsc",
      "src/*.json",
      "src/*.ts",
      "src/*.tsc"
    ],
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off",
        "noUselessElse": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
